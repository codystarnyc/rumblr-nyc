
<div class="row socialbox">
<% @users.each do |user| %>
<div class="card socialcard" style="width: 18rem;">
  <img class="card-img-top" src="assets/img/michael.jpg" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title"><%= user.first_name %></h5>
    <p class="card-text"><%= user.email %></p>
    <a href="/myblog/<%= user.id %>" class="btn btn-primary"><%= user.first_name %>'s Page</a>
  </div>
</div>
<% end %>
</div>